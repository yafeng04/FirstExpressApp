<%include ../partials/header %>
<!--  this is for relative directory to other files-->

<div class="container">
  <div class="col">
    <h1 style="text-align: center;">create a new comment<%= campground.name %></h1>
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
          <!--  above is for url that is used for making http request -->
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text" />
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="author" />
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a href="/campgrounds">Go back</a>

    </div>
  </div>
</div>
<%include ../partials/footer %>
